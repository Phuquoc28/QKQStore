@model QKQStore.Models.Users
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login/Đăng Nhập</h2>

@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <p class="text-danger">@ViewBag.ThongBao</p>

    <div class="row">
        <div class="form-group">
            @Html.LabelFor(temp => temp.Fullname)

            @Html.TextBoxFor(temp => temp.Fullname,
           new
                {
                    placeholder = "Tên Đăng Nhập",
               @class = "form-control"
                })
            @Html.ValidationMessageFor(temp => temp.Fullname, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(temp => temp.Password)
            @Html.PasswordFor(temp => temp.Password,
           new
                {
                    placeholder = "Password",
               @class = "form-control"
                })
            @Html.ValidationMessageFor(temp => temp.Password, "", new { @class = "text-danger" })
        </div>
        <div>
            <a href="@Url.Action("Register","User")" style="text-decoration:none; font-weight:bold">Tạo Tài Khoản</a>
           
        </div>
        <button type="submit" class="btn btn-success" style="width:200px; margin-left:auto; margin-right:auto">ĐĂNG NHẬP</button>
    </div>
}