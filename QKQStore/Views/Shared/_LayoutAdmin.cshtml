@{
    ViewBag.Title = "_LayoutAdmin";

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title QKQStore.vn</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/MyStyle.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            <div style="display: flex; align-items: center;">
                <img src="~/Content/Pic/QKQlogo.png" style="height: 40px;" alt="Logo QKQs" />
                <span style="margin-left: 10px; font-size: 0; font-weight: unset;">QKQstore.vn</span>
            </div>
            @Html.ActionLink("QKQ Store", "IndexAdmin", "Admin", new { @class = "navbar-brand" })
           
            <nav style="display: flex; gap: 70px; position:relative">
                <!-- tăng khoảng cách giữa các mục -->
           
                    <a class="nav-link text-white position-relative d-flex align-items-center" href="@Url.Action("SanPham", "Admin")">
                            Quản Lý Sản Phẩm
                    </a>
                    <a class="nav-link text-white d-flex align-items-center" href="@Url.Action("Index","Categories")">
                        Quản Lý Danh Mục
                    </a>
                
             
                    <a class="nav-link text-white d-flex align-items-center" href="@Url.Action("IndexDonHang","Order")">
                        Quản Lý Đơn Hàng
                    </a>
             
                
                    <a class="nav-link text-white d-flex align-items-center" href="#">
                        PHỤ KIỆN <i class="bi bi-caret-down-fill ms-1"></i>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Dây nịt</a></li>
                        <li><a class="dropdown-item" href="#">Bóp tiền</a></li>
                        <li><a class="dropdown-item" href="#">Vớ</a></li>
                        <li><a class="dropdown-item" href="#">Giày</a></li>
                    </ul>
             
            </nav>


            <div class="d-flex align-items-center gap-3">
                <div style="text-align:center">
                    <a style="color:floralwhite; display:block" href="@Url.Action("Login","User")">
                        <i class="bi bi-person fs-4"></i>
                    </a>
                    <span class="text-white" style="font-size:12px;">
                        @if (Session["Fullname"] != null)
                        {
                            @Session["Fullname"]
                        }
                        else
                        {
                            @:Khách
                        }
                        @if (Session["Fullname"] != null)
                        {
                            <a href="@Url.Action("Logout","User")"
                               style="color:white; font-size:12px; display:block; margin-top:2px;">
                                Đăng xuất
                            </a>
                        }
                    </span>
                </div>
              
                <form class="d-flex">
                    <input class="form-control form-control-sm" type="search" placeholder="Tìm kiếm..." />
                    <button class="btn btn-sm btn-light ms-2"><i class="bi bi-search"></i></button>
                </form>
            </div>
        </div>
    </nav>
    @*

                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Trang Chủ", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                </div>
            </div>
        </nav>*@
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>

    <!-- FOOTER -->
    <footer class="footer mt-5 py-4 text-white">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <img src="~/Content/Pic/QKQlogo.png" alt="Logo" style="height: 40px;" />
                        <span class="ms-2 fs-5 fw-bold">QKQstore.vn</span>
                    </div>
                    <p>Email: contact@qkqstore.vn</p>
                    <p>Hotline: 0971 234 567</p>
                    <p>Địa chỉ: 123 QKQ Street, TP.HCM</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">Chính sách</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none">Chính sách đổi trả</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Chính sách bảo mật</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Điều khoản dịch vụ</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">Kết nối với chúng tôi</h6>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-white fs-4"><i class="bi bi-facebook"></i></a>
                        <a href="https://zalo.me/g/oqvzlk749" class="text-white fs-4"><i class="bi bi-chat-dots-fill"></i></a>
                        <a href="#" class="text-white fs-4"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
            </div>
            <hr class="border-light" />
            <p class="text-center mb-0">&copy; 2025 QKQstore.vn. All rights reserved.</p>
        </div>
    </footer>
    <!-- ICON ZALO + LIÊN HỆ -->
    <div class="floating-icons">
        <a href="https://zalo.me/g/oqvzlk749" target="_blank"><img src="~/Content/Pic/Icon_of_Zalo.svg.png" width="40" /></a>
        <a href="tel:0971234567"><img src="~/Content/Pic/Lienhelogo.png" width="40" /></a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
