@using QKQStore.Models
@model IEnumerable<Products>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Trang Chủ";
}
<!-- BANNER TEXT -->
<section class="text-banner d-flex flex-column align-items-center justify-content-center text-center py-5 px-3">
    <h1 class="display-5 fw-bold mb-3">Mừng Khai Trương QKQStore </h1>
    <p class="fs-4 mb-1">Đồng Giá <span class="text-danger fw-bold fs-2">77K</span></p>
    <p class="fs-5 mb-1">Cùng Hàng Ngàn Deal Hot</p>
    <p class="fs-5 mb-3">Sale Up To <span class="text-danger fw-bold fs-2">50%</span></p>
    <a href="/Sales" class="btn btn-dark px-4 py-2 rounded-pill fw-semibold">SĂN SALE NGAY</a>
</section>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-sm-4 col-md-4 col-lg-3 d-flex align-items-stretch mb-4">
            <div class="card w-100 shadow-sm">
                <a href="@Url.Action("Details", "Products", new { id = product.Id })">
                    <div class="d-flex align-items-center justify-content-center h-100">
                        <img src="@Url.Content("~/Content/Pic/" + product.Image)"
                             class="img-fluid"
                             style="max-height: 100%; max-width: 100%; object-fit: contain;"
                             alt="@product.Title" />
                    </div>
                </a>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Title</h5>
                    <p class="card-text text-danger fw-bold">@product.Price.ToString("N0") VNĐ</p>

                </div>
            </div>
        </div>
    }
</div>

