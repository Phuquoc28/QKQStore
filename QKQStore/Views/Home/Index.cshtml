@using QKQStore.Models
@model IEnumerable<Products>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Trang Chủ";
    <link href="~/Content/BannerSheet.css" rel="stylesheet" />
}

<!-- BANNER TEXT -->
<div class="slider-container">
    <div class="slider-track">
        <div class="slide">
            <div class="content">
                <h1>Chào mừng đến với <span class="highlight">QKQshop.vn</span></h1>
                <p>Khuyến mãi cực sốc mỗi ngày</p>
                <a href="#" class="btn-banner">SĂN SALES NGAY</a>
            </div>
        </div>
        <div class="slide">
            <div class="content">
                <h1><span class="highlight">Giảm giá</span> đến 70%</h1>
                <p>Chỉ áp dụng trong hôm nay</p>
                <a href="#" class="btn-banner">XEM NGAY</a>
            </div>
        </div>
        <div class="slide">
            <div class="content">
                <h1>Thời trang <span class="highlight">Nam tính</span></h1>
                <p>Phong cách đỉnh cao cho bạn</p>
                <a href="#" class="btn-banner">MUA NGAY</a>
            </div>
        </div>
    </div>
</div>
<script>
    let currentIndex = 0;
    const totalSlides = 3;
    const track = document.querySelector('.slider-track');

    setInterval(() => {
        currentIndex = (currentIndex + 1) % totalSlides;
        track.style.transform = `translateX(-${currentIndex * 100}vw)`;
    }, 3000);
</script>


<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-sm-4 col-md-4 col-lg-3 d-flex align-items-stretch mb-4">
            <div class="card w-100 shadow-sm">
                <a href="@Url.Action("Details", "Products", new { id = product.Id })">
                    <div class="d-flex align-items-center justify-content-center h-100">
                        <img src="@Url.Content("~/Content/Pic/" + product.Image)"
                             class="img-fluid"
                             style="max-height: 100%; max-width: 100%; object-fit: contain;"
                             alt="@product.Title" />
                    </div>
                </a>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Title</h5>
                    <p class="card-text text-danger fw-bold">@product.Price.ToString("N0") VNĐ</p>

                </div>
            </div>
        </div>
    }
</div>

