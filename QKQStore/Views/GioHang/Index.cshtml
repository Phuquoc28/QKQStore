@model IEnumerable<QKQStore.Models.Mathangmua>

<h2 class="text-center">GIỎ HÀNG CỦA BẠN</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        Giỏ hàng của bạn đang trống.
        <br />
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-2">Tiếp tục mua sắm</a>
    </div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("N0") ₫</td>
                    <td>@item.TotalPrice().ToString("N0") ₫</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <h4>Tổng tiền: @ViewBag.TongTien.ToString("N0") ₫</h4>
    </div>
}
