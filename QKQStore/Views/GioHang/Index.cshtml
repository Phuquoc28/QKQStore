@model IEnumerable<QKQStore.Models.Mathangmua>

<h2 class="text-center">GIỎ HÀNG CỦA BẠN</h2>

@if (Model!= null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr style="text-align: center; font-weight: bold;">
                <th>Mã SP</th>
                <th>Tên sản phẩm</th>
                <th>Ảnh</th>
                <th>Số lượng</th>
                <th>Giá gốc</th>
                <th>Giảm giá</th>
                <th>Thành tiền</th>
                <th>Chi tiết</th>
                <th>Cập nhật</th>
                <th>Xóa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Title</td>
                    <td>

                        <img src="@Url.Content("~/Content/Pic/" + item.Image)" style="width:80px;height:auto;" alt="@item.Title" />

                    </td>
                    @using (Html.BeginForm("CapNhatMatHang", "GioHang", new { id = item.ProductId }))
                    {
                        <td>
                            <input type="number" min="1" value="@item.Quantity" name="SoLuong" />
                        </td>
                        <td>@item.Price</td>
                        <td>@item.TotalPrice()</td>
                        <td>
                            <button type="submit" class="btn btn-primary">Cập nhật</button>
                        </td>
                    }
                    <td>@String.Format("{0:0,0} VNĐ", item.Price)</td>
                    <td>@String.Format("{0:0,0} VNĐ", item.TotalPrice())</td>
                    <td>
                        @Html.ActionLink("Chi tiết", "Details", "GioHang", new { id = item.ProductId, area = "Admin" }, new { @class = "btn btn-success" })
                    </td>
                    <td>
                        @Html.ActionLink("Cập nhật", "CapNhatMatHang", "GioHang", new { id = item.ProductId }, new { @class = "btn btn-primary" })
                    </td>
                    <td>
                        @Html.ActionLink("Xóa hàng", "XoaMatHang", "GioHang", new { id = item.ProductId }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

            <tr style="font-weight:bold; text-align:right; color:red;">
                <td colspan="5">Tổng số lượng: @ViewBag.TongSl</td>
                <td>Tổng tiền: @String.Format("{0:0,0} VNĐ", ViewBag.TongTien)</td>
            </tr>
        </tbody>
    </table>
}
else
{
    <p class="text-danger text-center">Giỏ hàng trống.</p>
}
