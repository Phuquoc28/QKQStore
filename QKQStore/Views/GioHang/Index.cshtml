@model IEnumerable<QKQStore.Models.Mathangmua>

<h2 class="text-center">GIỎ HÀNG CỦA BẠN</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr class="text-center fw-bold">
                <th>Mã SP</th>
                <th>Tên sản phẩm</th>
                <th>Ảnh</th>
                <th>Số lượng</th>
                <th>Giá gốc</th>
                <th>Giảm giá</th>
                <th>Thành tiền</th>
                <th>Chi tiết</th>
                <th>Xóa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Title</td>
                    <td>
                        <img src="@Url.Content("~/Content/Pic/" + item.Image)"
                             style="width:80px;height:auto;" alt="@item.Title" />
                    </td>
                    <td>
                        @using (Html.BeginForm("CapNhatMatHang", "GioHang", new { id = item.ProductId }, FormMethod.Post))
                        {
                            <input type="number" min="1" value="@item.Quantity" name="Quantity" class="form-control w-75 d-inline" />
                            <button type="submit" class="btn btn-primary btn-sm">Cập nhật</button>
                        }
                    </td>
                    <td>@String.Format("{0:0,0} VNĐ", item.Price)</td>
                    <td>@String.Format("{0:0,0} VNĐ", item.Discount)</td>
                    <td>@String.Format("{0:0,0} VNĐ", item.TotalPrice())</td>
                    <td>
                        @Html.ActionLink("Chi tiết", "Details", "Products", new { id = item.ProductId }, new { @class = "btn btn-success btn-sm" })
                    </td>
                    <td>
                        @Html.ActionLink("Xóa hàng", "Xoamathang", "GioHang", new { id = item.ProductId }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }

            <tr class="fw-bold text-end text-danger">
                <td colspan="7">
                    Tổng số lượng: @ViewBag.TongSl
                    | Tổng tiền: @String.Format("{0:0,0} VNĐ", ViewBag.TongTien)
                </td>
            </tr>
            <tr style="font-weight:bold; text-align:center;">
                <td colspan="9">
                    @Html.ActionLink("ĐẶT HÀNG", "DatHang", null, new { @class = "btn btnprimary" })
                </td>
            </tr>
        </tbody>
    </table>
}
else
{
    <p class="text-danger text-center">Giỏ hàng trống.</p>
}
