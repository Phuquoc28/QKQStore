@using QKQStore.Models@model  QKQStore.Models.Products@{    ViewBag.Title = "Details";    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";}<h2 class="mt-4">THÔNG TIN CHI TIẾT SẢN PHẨM</h2><br /><div class="row">    <div class="offset-md-1 col-md-4">        <img src="@Url.Content("~/Content/Pic/" + Model.Image)" alt="Ảnh sản phẩm" width="300" height="300" />    </div>    <div class="col-md-6 details">        <h3>Tên sản phẩm: @Model.Title</h3>        <p style="text-align: justify;">            <strong>Mô tả:</strong> @Model.Description        </p>        <p class="price">            Giá gốc:            <span style="text-decoration: line-through; color: gray; font-size: 20px;">                @String.Format("{0:0,0}", Model.Price) VNĐ            </span>        </p>        <p class="price">            Giá khuyến mãi:            <span style="color:red; font-size:32px; font-weight:bold;">                @String.Format("{0:0,0}", Model.Discount) VNĐ            </span>        </p>           </div></div>