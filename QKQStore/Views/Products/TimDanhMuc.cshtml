@model IEnumerable<QKQStore.Models.Products>
@{
    ViewBag.Title = "Sản phẩm theo danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml"; // layout khách hàng
}

<h2 class="text-center my-4">Danh sách sản phẩm</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 text-center">
                <img src="@Url.Content("~/Content/Pic/" + item.Image)" class="card-img-top" style="max-height:200px;" />
                <div class="card-body">
                    <h6>@item.Title</h6>
                    <p class="text-danger fw-bold">@item.Price.ToString("N0") VNĐ</p>
                    <a href="@Url.Action("Details","Products", new { id = item.Id })" class="btn btn-dark btn-sm">Xem chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>
